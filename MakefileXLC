all: comparison.c comparison.h pgenalg.c
	gcc -I./libsndfile-1.0.26/src -I./fftw-3.3.4/api -Wall -O3 -c comparison.c -o comparison.o
	mpixlc -I./libsndfile-1.0.26/src -I./fftw-3.3.4/api -Wall -O3 -c pgenalg.c -o pgenalg.o
	mpixlc comparison.o pgenalg.o -o pgenalg -L./fftw-3.3.4/.libs -lfftw3 -L./libsndfile-1.0.26/src/.libs -lsndfile -lm
